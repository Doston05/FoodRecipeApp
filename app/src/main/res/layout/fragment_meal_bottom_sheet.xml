<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/bottom_sheet_layout"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.bottomsheet.MealBottomSheetFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@drawable/corner_radius"

    android:layout_height="match_parent">
 <ImageView
     android:id="@+id/bottom_sheet_img_meal"
     android:layout_width="@dimen/_80sdp"
     android:layout_height="@dimen/_80sdp"
     android:scaleType="centerCrop"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     android:layout_margin="@dimen/_5sdp"/>
    <LinearLayout
        android:id="@+id/linear_bottom_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_img_meal"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_img_meal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_5sdp">
        <TextView
            android:id="@+id/tv_bottom_sheet_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BottomShet"
            android:textColor="@color/black"
            android:fontFamily="@font/myfont"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:drawableTint="@color/g_black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_bottom_sheet_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beef"
            android:textColor="@color/black"
            android:fontFamily="@font/myfont"
            android:drawableStart="@drawable/ic_baseline_category_24"
            android:drawableTint="@color/g_black"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal_Name"
        app:layout_constraintStart_toStartOf="@id/linear_bottom_sheet"
        app:layout_constraintTop_toBottomOf="@id/linear_bottom_sheet"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/g_black"
        android:fontFamily="@font/myfont"/>
    <TextView
        android:id="@+id/tv_read_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read more..."
        app:layout_constraintStart_toStartOf="@id/linear_bottom_sheet"
        app:layout_constraintTop_toBottomOf="@id/tv_meal_name"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/g_black"
        android:fontFamily="@font/myfont"/>
</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>